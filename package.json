{
  "name": "v-codemirror",
  "description": "A laconic codemirror component for Vue.js",
  "version": "1.0.10",
  "author": "chl814@foxmail.com",
  "scripts": {
    "dev": "poi",
    "example:build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build": "poi build",
    "semantic-release": "node_modules/.bin/semantic-release pre && npm publish && semantic-release post",
    "release": "node build/release.js",
    "eslint": "eslint *.js src/**/*.js",
    "eslint:fix": "eslint --fix src/**/*.js",
    "prettier": "prettier --config .prettierrc --write ./src/*.js ./src/**/*.json"
  },
  "dependencies": {
    "codemirror": "^5.29.0",
    "loadjs": "^3.5.2"
  },
  "main": "dist/v-codemirror.js",
  "module": "dist/v-codemirror.es.js",
  "files": [
    ".media",
    "src",
    "dist"
  ],
  "devDependencies": {
    "babel-minify": "^0.2.0",
    "babel-preset-vue": "^2.0.0",
    "bili": "^2.2.0",
    "eslint": "^4.8.0",
    "inquirer": "^3.3.0",
    "poi": "^9.6.13",
    "poi-preset-babel-minify": "^1.0.3",
    "poi-preset-bundle-report": "^2.0.2",
    "prettier": "^1.7.0",
    "raw-loader": "^0.5.1",
    "repo-latest-commit": "^1.0.0",
    "webpack-node-modules": "^0.1.1"
  }
}

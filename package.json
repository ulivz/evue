{
  "name": "v-codemirror",
  "description": "A laconic codemirror component for Vue.js",
  "version": "1.0.8",
  "author": "chl814@foxmail.com",
  "scripts": {
    "example:dev": "cross-env NODE_ENV=development webpack-dev-server --port 1994 --open --hot",
    "example:build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build": "bili",
    "semantic-release": "node_modules/.bin/semantic-release pre && npm publish && semantic-release post",
    "release": "node build/release.js",
    "commit": "git-cz",
    "eslint": "eslint *.js src/**/*.js",
    "eslint:fix": "eslint --fix src/**/*.js",
    "prettier": "prettier --config .prettierrc --write ./src/*.js ./src/**/*.json"
  },
  "dependencies": {
    "codemirror": "^5.29.0"
  },
  "files": [
    "src",
    "media",
    "dist"
  ],
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.5.1",
    "bili": "^0.18.1",
    "chalk": "^2.1.0",
    "commitizen": "^2.9.6",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.8.0",
    "file-loader": "^0.9.0",
    "inquirer": "^3.3.0",
    "node-sass": "^4.5.0",
    "ora": "^1.3.0",
    "prettier": "^1.7.0",
    "sass-loader": "^5.0.1",
    "semantic-release": "^8.0.3",
    "shelljs": "^0.7.8",
    "style-loader": "^0.18.2",
    "vue": "^2.3.3",
    "vue-loader": "^12.1.0",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "yargs": "^9.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
